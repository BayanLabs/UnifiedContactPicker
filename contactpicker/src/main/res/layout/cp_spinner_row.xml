<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <!--Email / phone icon-->
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivCommunicationIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:background="#E0E0E0"
        android:src="@drawable/ic_email"
        android:scaleType="center"
        android:layout_width="@dimen/contact_size"
        android:layout_height="@dimen/contact_size"
        app:riv_mutate_background="true"
        app:riv_corner_radius="30dip"/>

    <!--Selected icon-->
    <ImageView
        android:id="@+id/cp_ivSelectedComm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_toRightOf="@id/ivCommunicationIcon"
        android:layout_toEndOf="@id/ivCommunicationIcon"
        android:layout_toLeftOf="@id/cp_ivSelectedComm"
        android:layout_toStartOf="@id/cp_ivSelectedComm"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--DisplayName-->
        <TextView
            android:id="@+id/tvDisplayName"
            android:text="Name Last name"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--Communication-->
        <TextView
            android:id="@+id/tvCommunication"
            android:text="xxxxxxxx"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>