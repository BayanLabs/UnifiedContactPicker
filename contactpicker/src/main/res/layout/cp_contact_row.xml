<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cp_checkBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--<com.github.ivbaranov.mli.MaterialLetterIcon-->
        <!--android:id="@+id/letterIcon"-->
        <!--app:mli_letter_color="@color/white"-->
        <!--android:layout_toRightOf="@id/cp_checkBox"-->
        <!--android:layout_toEndOf="@id/cp_checkBox"-->
        <!--android:focusable="false"-->
        <!--android:focusableInTouchMode="false"-->
        <!--android:layout_marginLeft="@dimen/activity_vertical_margin"-->
        <!--android:layout_marginStart="@dimen/activity_vertical_margin"-->
        <!--android:layout_width="@dimen/contact_size"-->
        <!--android:layout_height="@dimen/contact_size" />-->

    <ImageView
        android:id="@+id/letterIcon"
        android:layout_toRightOf="@id/cp_checkBox"
        android:layout_toEndOf="@id/cp_checkBox"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_width="@dimen/contact_size"
        android:layout_height="@dimen/contact_size"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/cp_tvName"
        android:text="Name LastName"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_toRightOf="@id/letterIcon"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@id/letterIcon"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/cp_tvCommunication"
        android:text="5512345678"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_toRightOf="@id/letterIcon"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@id/letterIcon"
        android:layout_below="@id/cp_tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

</RelativeLayout>