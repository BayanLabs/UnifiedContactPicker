<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:id="@+id/letterIcon"
        app:mli_letter_color="@color/white"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_width="@dimen/contact_size"
        android:layout_height="@dimen/contact_size" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_toRightOf="@id/letterIcon"
        android:layout_toEndOf="@id/letterIcon"
        android:layout_toLeftOf="@id/cp_ivSelectedComm"
        android:layout_toStartOf="@id/cp_ivSelectedComm"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--DisplayName-->
        <TextView
            android:id="@+id/tvDisplayName"
            android:text="Name Last name"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--Communication-->
        <TextView
            android:id="@+id/tvCommunication"
            android:text="xxxxxxxx"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>