<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_marginLeft="25dp"
    android:layout_marginStart="25dp"
    android:layout_height="wrap_content">

    <!--Email / phone icon-->
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivCommunicationIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:background="#E0E0E0"
        android:src="@drawable/ic_email"
        android:scaleType="center"
        android:layout_width="@dimen/contact_size"
        android:layout_height="@dimen/contact_size"
        app:riv_mutate_background="true"
        app:riv_corner_radius="30dip"/>

    <TextView
        android:id="@+id/tvCommunication"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ivCommunicationIcon"
        android:layout_toEndOf="@id/ivCommunicationIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>